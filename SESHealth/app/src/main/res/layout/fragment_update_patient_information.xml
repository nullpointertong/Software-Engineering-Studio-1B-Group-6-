<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yourteamnumber.seshealthpatient.Fragments.PatientInformationFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/patient_image_view"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/patient_icon" />

        <ScrollView
            android:id="@+id/patient_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/patient_buttons_layout"
            android:layout_below="@+id/patient_image_view">

            <TableLayout
                android:id="@+id/table_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:padding="20dp"
                android:shrinkColumns="1"
                android:stretchColumns="2">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="First Name"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/patient_firstName"
                        android:layout_column="2"
                        android:inputType="textPersonName|textCapWords" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="Last Name"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/patient_lastName"
                        android:layout_column="2"
                        android:inputType="textPersonName|textCapWords" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="Gender"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="10dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="Height"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/patient_height"
                        android:layout_column="2"
                        android:inputType="numberDecimal" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="Weight"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/patient_weight"
                        android:layout_column="2"
                        android:inputType="numberDecimal" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="Medical Condition"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/patient_medicalCondition"
                        android:layout_column="2"
                        android:inputType="text" />

                </TableRow>

            </TableLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/patient_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <Button
                android:id="@+id/updateButton"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:background="@color/dark_navy"
                android:text="update"
                android:textColor="@color/whiteColor"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>