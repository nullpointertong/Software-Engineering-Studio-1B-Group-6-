<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yourteamnumber.seshealthpatient.Fragments.SendFileFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/relevant_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/relevant_hint"
        android:gravity="top"
        android:layout_marginTop="50dp"
        android:minLines="8"
        android:maxLines="8"
        android:inputType="textMultiLine"/>

    <TextView
        android:id="@+id/input_tv"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:text="@string/relevant_hint1" />

    <Button
        android:layout_gravity="end"
        android:id="@+id/upload_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="@string/upload_relevant_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_gravity="center_horizontal"
        android:padding="30dp"
        android:text="@string/upload_tv"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="400dp"
    android:gravity="center">

    <Button
        android:id="@+id/selectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_Btn" />

    <Button
        android:id="@+id/uploadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_Btn"/>
</LinearLayout>


    <TextView
        android:id="@+id/fileNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fileName_Tv"
        android:layout_marginTop="430dp"
        android:layout_gravity="center_horizontal"
        android:padding="30dp" />



</FrameLayout>
